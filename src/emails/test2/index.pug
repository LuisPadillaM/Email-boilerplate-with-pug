extends ../../layout/main.pug

block variables
  -var fallback = "Open Sans, Helvetica, Arial, sans-serif"
  -var title = "Email Template"
  -var white = "#ffffff"
  -var max_w = 600
  -var mob = 480
  -var img_path = "./img/"
  -var bg_color= "#eeeeee"
  -var externalFonts = []
block conditionals
block styles
  style(type="text/css")
    include:scss(outputStyle="compressed") ./styles/inline.scss
    include:clean-css ./styles/index.css

block content
  //- body(style="background-color: #eeeeee;" bgcolor="#eeeeee")

  //HIDDEN PREHEADER TEXT
  div(style=`display: none!important;mso-hide:all; font-size: 1px; color: #fefefe; line-height: 1px; font-family: ${fallback}; max-height: 0px; max-width: 0px; opacity: 0; overflow: hidden;`).
    Enjoy the awesome experience of creating your own emails with this tool

  // CONTAINER TABLE
  table(width="100%")&attributes(tableAtt)
    tr
      td(align="center" style=`background-color: ${bg_color};` bgcolor=bg_color)
        //  WRAPPER TABLE
        table(align="center" width=max_w class="mobile-table")&attributes(tableAtt)
                tr
                  td(align="center" valign="top" style="font-size:0; padding: 35px;" bgcolor="#044767")
                    table(align="left" width="250" class="mobile-table")&attributes(tableAtt)
                      tr
                        td(align="left" valign="top" style=`font-family: ${fallback}; font-size: 36px; font-weight: 800; line-height: 48px;` class="mobile-center")
                          h1( class="white" style="font-size: 36px; font-weight: 800; margin: 0;") E_PUG
                    table(align="right" width="250" class="mobile-hide")&attributes(tableAtt)
                      tr
                        td(align="right" valign="top" style=`font-family: ${fallback}; font-size: 48px; font-weight: 400; line-height: 48px;`)
                          table(align="right")&attributes(tableAtt)
                            tr
                              td(style=`font-family: ${fallback}; font-size: 18px; font-weight: 400;`)
                                p(class="white" style="font-size: 18px; font-weight: 400; margin: 0;")
                                  a(href="http://litmus.com" target="_blank" class="white" style="text-decoration: none;") Shop &nbsp;
                              td(style=`font-family: ${fallback}; font-size: 18px; font-weight: 400; line-height: 24px;`)
                                a(href="http://litmus.com" target="_blank" class="white" style="text-decoration: none;")
                                  img(src=img_path+"shop.png" width="27" height="23" style="display: block; border: 0px;")
                tr
                  td(align="center" style="padding: 35px; background-color: #ffffff;" bgcolor=white)
                    table(align="center" width="100%")&attributes(tableAtt)
                      tr
                        td(align="center")
                          img(src=img_path+"hero-image-feedback.png" width="120" height="96")
                      tr
                        td(align="center" style=`font-family: ${fallback}; font-size: 16px; font-weight: 400; line-height: 24px; padding-top: 25px; padding-bottom: 15px; border-bottom: 3px solid #eeeeee;`)
                          h2(style="font-size: 30px; font-weight: 800; line-height: 36px; color: #333333; margin: 0;").
                            Tell Us What You Think in 5 Minutes or Less
                          p(style="font-size: 16px; font-weight: 400; line-height: 24px; color: #777777;").
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quod, quae. Animi eum obcaecati ab porro!
                      tr
                        td(align="center" style="padding: 35px 0 15px 0;")
                          table&attributes(tableAtt)
                            tr
                              //- +button({width:205, height:50, bgcolor:'#ed8e20', radius:5, link: "#", font_family: fallback, text: "Offer Feedback"})
                              td(align="center" style="border-radius: 5px;" bgcolor="#ed8e20")
                                a(href="http://litmus.com" target="_blank" class="white" style=`font-size: 18px; font-family: ${fallback}; text-decoration: none; border-radius: 5px; background-color: #ed8e20; padding: 15px 30px; border: 1px solid #ed8e20; display: block;`).
                                  Offer Feedback
                      tr
                        td(align="center" style=`font-family: ${fallback}; font-size: 18px; font-weight: 400; line-height: 24px;`)
                          p(style="font-size: 18px; font-weight: 800; line-height: 24px; color: #333333;") Thank you, Beretun
                          p(style="font-size: 16px; font-weight: 400; line-height: 24px; color: #777777;") Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corrupti obcaecati totam quisquam corporis suscipit quaerat.
                tr
                  td(align="center" style="background-color: #ffffff;" bgcolor=white)
                    img(src=img_path+"arrow-up.png" width="46" height="22" style="display: block; border: 0px;")
                tr
                  td(align="center" style=" padding: 35px; background-color: #1b9ba3; border-bottom: 20px solid #48afb5;" bgcolor="#1b9ba3")
                    table(align="center" width="100%")&attributes(tableAtt)
                      tr
                        td(align="center")
                          table
                            tr
                              each icon in social_icons
                                td(style="padding: 0 10px;")
                                 a(href=icon.url target="_blank")
                                  img(src=img_path+icon.img width=icon.width height=icon.height style="display: block; border: 0px;")
                              td(style=`font-family: ${fallback}; font-size: 20px; font-weight: 400; line-height: 24px; padding: 0 10px;`)
                                a(href="http://litmus.com/blog" target="_blank" class="white" style="text-decoration: none;") BLOG

                tr
                  td(align="center" style="padding: 35px; background-color: #ffffff;" bgcolor=white)
                    table(align="center" width="100%")&attributes(tableAtt)
                      tr
                        td(align="center")
                          img(src=img_path+"logo-footer.png" width="37" height="37" style="display: block; border: 0px;")
                      tr
                        td(align="center" style=`font-family: ${fallback}; font-size: 14px; font-weight: 400; line-height: 24px; padding: 5px 0 10px 0;`)
                          p(style="font-size: 14px; font-weight: 800; line-height: 18px; color: #333333;").
                            Plaza Victoria Avenue 1#[br]
                            Heredia, CR 40101
                      tr
                        td(align="left" style=`font-family: ${fallback}; font-size: 14px; font-weight: 400; line-height: 24px;`)
                          p(style="font-size: 14px; font-weight: 400; line-height: 20px; color: #777777;").
                            If you didn't create an account using this email address, please ignore this email or #[a(href="http://litmus.com" target="_blank" style="color: #777777;") unsusbscribe].
